{
  "markdownlint.ignore": ".markdownlintignore",
  "[markdown]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "files.exclude": {
    "node_modules": true,
    "dist": true,
    "pnpm-lock.yaml": true,
    "lib": true,
    "*.tsbuildinfo": true,
    "apps/docs": true,
    "packages/cli": true,
    "packages/core": true,
    "packages/tpl": true,
    "packages/types": true
  },
  "search.exclude": {
    "node_modules": true,
    "dist": true,
    "pnpm-lock.yaml": true,
    "lib": true,
    "*.tsbuildinfo": true
  },
  "eslint.rules.customizations": [
    {
      "rule": "@stylistic/*",
      "severity": "off"
    }
  ],
  "autoOpenWorkspace.enableAutoOpenIfSingleWorkspace": true,
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"projen\"."
